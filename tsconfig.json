{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"module": "esnext",
		"moduleResolution": "Node16",
		"noImplicitAny": true,
		"outDir": "./dist",
		"sourceMap": true,
		"strict": true,
		"target": "es2020",
		"pretty": true
	},
	"include": ["src"]
}
